      </ul>
    </div>
  <% end %>
<div class="container form-group" style="text-align: center">
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :song_name, class: 'form-control' %>
  </div>

  <div class="field form-group">
    <%= form.label :artist_id %>
    <%= form.collection_select :artist_id, Artist.all, :id, :name, {:prompt => 'Select Artist'}, class: 'form-control' %>
