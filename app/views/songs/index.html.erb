<p id="notice"><%= notice %></p>

<div class="container" style="text-align: center">
<h1>Songs</h1>
</div>

<div class="container">
  <table class = "table table-striped table-hover table-responsive{-sm|-md|-lg|-xl}">
    <caption>List of Songs with Artist</caption>
    <thead>
      <tr>
        <th>Name</th>
        <th>Artist</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @songs.each do |song| %>
        <tr>
          <td><%= song.name %></td>
          <td><%= song.artist.try(:name) %></td>
          <td><%= link_to 'Show', song %></td>
          <td><%= link_to 'Edit', edit_song_path(song) %></td>
          <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<div class="container">
<%= link_to 'New Song', new_song_path, class: 'btn btn-info' %>
</div>