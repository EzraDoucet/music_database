<p id="notice"><%= notice %></p>

<div class="container" style="text-align: center">
<h1>Genres</h1>
</div>

<div class="container">
  <table class = "table table-striped table-hover table-responsive{-sm|-md|-lg|-xl}">
    <caption>List of Genres</caption>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to 'Show', genre %></td>
          <td><%= link_to 'Edit', edit_genre_path(genre) %></td>
          <td><%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
<div class="container">
<%= link_to 'New Genre', new_genre_path, class: 'btn btn-info' %>
</div>